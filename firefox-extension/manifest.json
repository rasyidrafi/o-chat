{
  "manifest_version": 2,
  "name": "O-Chat Extension",
  "version": "1.0.0",
  "description": "O-Chat - Modern AI Chat Application as Firefox Extension",
  
  "permissions": [
    "storage",
    "activeTab",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api-3ujaavqala-uc.a.run.app/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],

  "web_accessible_resources": [
    "dist/*",
    "dist/assets/*"
  ],

  "browser_action": {
    "default_title": "Open O-Chat",
    "default_icon": {
      "16": "dist/favicon.png",
      "32": "dist/favicon.png",
      "48": "dist/favicon.png",
      "128": "dist/favicon.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://fonts.gstatic.com;",

  "icons": {
    "16": "dist/favicon.png",
    "32": "dist/favicon.png",
    "48": "dist/favicon.png",
    "128": "dist/favicon.png"
  }
}
