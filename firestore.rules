rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for chats collection
    match /chats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /conversations/{conversationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Rules for settings collection
    match /settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for user_data collection (cloud storage for API keys, models, providers)
    match /user_data/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Rules for data subcollection
      match /data/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Enable collection group queries for messages
    match /{path=**}/messages/{messageId} {
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }
  }
}
