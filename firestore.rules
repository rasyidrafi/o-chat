rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for chats collection
    match /chats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /conversations/{conversationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Rules for settings collection
    match /settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for providers collection - new structure
    match /providers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Rules for provider data subcollection
      match /data/{providerId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Rules for models collection - new structure
    match /models/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Rules for model collections (system or provider-specific)
      match /{collectionId}/{modelId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Legacy rules for user_data collection (keeping for backward compatibility)
    match /user_data/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Rules for data subcollection
      match /data/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Enable collection group queries for messages
    match /{path=**}/messages/{messageId} {
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }
  }
}
